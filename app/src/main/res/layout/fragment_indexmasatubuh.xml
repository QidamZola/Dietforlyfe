<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imt"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#DE4034"
        android:textSize="22dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:id="@+id/TILtb"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/txt_tinggibadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tinggi Badan"
            android:inputType="number"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text2"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TILtb"
        android:id="@+id/TILbb">
        <EditText
            android:id="@+id/txt_beratbadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Berat Badan"
            android:inputType="number"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_tinggibadan"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnHitungIMT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TILbb"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundedrectangle"
        android:onClick="btnHitung"
        android:text="Hitung" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berat Badan Ideal"
        android:layout_below="@+id/btnHitungIMT"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_bbi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai BBI"
        android:layout_below="@+id/btnHitungIMT"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Index Masa Tubuh"
        android:layout_below="@+id/text4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_imt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai IMT"
        android:layout_below="@+id/text4"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anda Memiliki Indeks Masa Tubuh :"
        android:layout_below="@+id/text5"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_ket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text6"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jk"
        android:layout_below="@+id/txt_ket"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:visibility="invisible"
        android:textStyle="bold"/>

</RelativeLayout>